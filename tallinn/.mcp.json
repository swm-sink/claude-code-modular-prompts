{
  "name": "tallinn-project-mcp",
  "version": "1.0.0",
  "description": "MCP configuration for the Tallinn project",
  "servers": {
    "project-filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "env": {
        "PROJECT_ROOT": "."
      }
    },
    "project-git": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-git", "--repository", "."],
      "env": {
        "GIT_REPOSITORY": "."
      }
    }
  },
  "tools": {
    "security-audit": {
      "command": "python",
      "args": ["scripts/security_audit.py"],
      "description": "Run security audit on the project"
    },
    "test-runner": {
      "command": "python", 
      "args": ["-m", "pytest"],
      "description": "Run project tests"
    }
  },
  "resources": {
    "project-docs": {
      "type": "file",
      "path": "README.md"
    },
    "security-report": {
      "type": "file", 
      "path": "SECURITY_AUDIT_REPORT.md"
    },
    "config-files": {
      "type": "directory",
      "path": ".claude/config"
    }
  }
}