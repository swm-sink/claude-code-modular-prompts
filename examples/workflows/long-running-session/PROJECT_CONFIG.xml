<?xml version="1.0" encoding="UTF-8"?>
<!-- Long-Running Session - Extended Development Configuration -->
<project_configuration version="1.0.0">
  <project_info>
    <name>Extended Development Session</name>
    <domain>extended-development</domain>
    <description>Optimized configuration for multi-day development projects with context preservation</description>
    <primary_language>javascript</primary_language>
    <framework_stack>full-stack</framework_stack>
  </project_info>

  <project_structure>
    <root_directory>.</root_directory>
    <source_directory>src</source_directory>
    <test_directory>tests</test_directory>
    <docs_directory>docs</docs_directory>
    <scripts_directory>scripts</scripts_directory>
    <config_directory>config</config_directory>
    <build_directory>build</build_directory>
  </project_structure>

  <quality_standards>
    <test_coverage>
      <threshold>92</threshold>
      <enforcement>BLOCKING</enforcement>
      <tool>jest</tool>
    </test_coverage>
    <performance>
      <response_time_p95>200ms</response_time_p95>
      <response_time_p99>500ms</response_time_p99>
      <memory_limit>512MB</memory_limit>
    </performance>
    <code_quality>
      <linter>eslint</linter>
      <formatter>prettier</formatter>
      <type_checker>typescript</type_checker>
    </code_quality>
  </quality_standards>

  <development_workflow>
    <commands>
      <install>npm install</install>
      <test>npm test</test>
      <lint>npm run lint</lint>
      <build>npm run build</build>
      <run>npm start</run>
      <format>npm run format</format>
    </commands>
    <git_workflow>
      <branch_pattern>feature/*</branch_pattern>
      <commit_style>conventional</commit_style>
      <pr_template>enabled</pr_template>
    </git_workflow>
  </development_workflow>

  <extended_session_management>
    <context_preservation>
      <research_findings>comprehensive</research_findings>
      <architectural_decisions>detailed</architectural_decisions>
      <implementation_progress>granular</implementation_progress>
      <quality_status>continuous</quality_status>
    </context_preservation>
    
    <github_integration>
      <issue_tracking>automatic</issue_tracking>
      <progress_updates>real_time</progress_updates>
      <milestone_management>intelligent</milestone_management>
      <team_coordination>enabled</team_coordination>
    </github_integration>
    
    <session_resumption>
      <context_restoration>complete</context_restoration>
      <progress_analysis>automatic</progress_analysis>
      <next_steps_suggestion>intelligent</next_steps_suggestion>
      <priority_reassessment>dynamic</priority_reassessment>
    </session_resumption>
  </extended_session_management>

  <domain_specific_rules>
    <rule>SESSION CONTEXT: Preserve complete development context across multiple sessions</rule>
    <rule>PROGRESS TRACKING: Maintain detailed progress tracking with milestone management</rule>
    <rule>GITHUB INTEGRATION: Use GitHub issues for systematic project management</rule>
    <rule>KNOWLEDGE ACCUMULATION: Build comprehensive project understanding over time</rule>
    <rule>SESSION RESUMPTION: Provide intelligent resumption with context restoration</rule>
    <rule>TEAM COORDINATION: Enable team collaboration across extended development periods</rule>
    <rule>QUALITY CONSISTENCY: Maintain quality standards throughout extended development</rule>
    <rule>LEARNING INTEGRATION: Accumulate and apply learning across session boundaries</rule>
  </domain_specific_rules>

  <framework_behavior>
    <file_creation_policy>extended</file_creation_policy>
    <documentation_generation>comprehensive</documentation_generation>
    <test_first_enforcement>strict</test_first_enforcement>
    <ai_temperature>
      <factual>0.2</factual>
      <analysis>0.3</analysis>
      <creative>0.4</creative>
    </ai_temperature>
  </framework_behavior>
</project_configuration>