<?xml version="1.0" encoding="UTF-8"?>
<!--
  React Project Configuration
  
  This configuration is optimized for React applications with TypeScript,
  Jest testing, and modern development practices.
  
  Copy this file to your React project root as PROJECT_CONFIG.xml
  and customize the values for your specific project.
-->

<project_config>
  <project_metadata>
    <name>my-react-app</name>
    <version>1.0.0</version>
    <description>Modern React application with TypeScript</description>
    <repository>https://github.com/yourorg/my-react-app</repository>
  </project_metadata>

  <tech_stack>
    <primary_language>typescript</primary_language>
    <framework>react</framework>
    <database>none</database>
    <additional_tech>
      <tech>vite</tech>
      <tech>tailwindcss</tech>
      <tech>react-query</tech>
      <tech>react-router</tech>
    </additional_tech>
  </tech_stack>

  <project_structure>
    <source_directory>src</source_directory>
    <test_directory>src/__tests__</test_directory>
    <docs_directory>docs</docs_directory>
    <scripts_directory>scripts</scripts_directory>
    <config_directory>config</config_directory>
    <static_directory>public</static_directory>
    <templates_directory>src/templates</templates_directory>
  </project_structure>

  <commands>
    <test>npm test</test>
    <lint>eslint src --ext .ts,.tsx &amp;&amp; prettier --check src</lint>
    <build>npm run build</build>
    <format>prettier --write src &amp;&amp; eslint src --ext .ts,.tsx --fix</format>
    <dev_server>npm run dev</dev_server>
    <migrate>echo &quot;No migrations needed for frontend-only app&quot;</migrate>
    <install>npm install</install>
  </commands>

  <quality_standards>
    <test_coverage>
      <threshold>85</threshold>
      <enforcement>blocking</enforcement>
    </test_coverage>
    <performance>
      <response_time_p95>100</response_time_p95>
      <memory_limit>256</memory_limit>
    </performance>
    <code_quality>
      <max_complexity>8</max_complexity>
      <max_line_length>100</max_line_length>
    </code_quality>
  </quality_standards>

  <framework_behavior>
    <file_creation_policy>moderate</file_creation_policy>
    <test_first_enforcement>strict</test_first_enforcement>
    <context_management>
      <max_file_tokens>3000</max_file_tokens>
      <max_context_tokens>100000</max_context_tokens>
      <reserved_work_tokens>40000</reserved_work_tokens>
    </context_management>
  </framework_behavior>

  <ai_temperature>
    <factual>0.1</factual>
    <analysis>0.2</analysis>
    <creative>0.6</creative>
  </ai_temperature>

  <security>
    <security_scanning>true</security_scanning>
    <dependency_scanning>true</dependency_scanning>
    <secrets_detection>true</secrets_detection>
  </security>

  <development_workflow>
    <git_workflow>github-flow</git_workflow>
    <branch_naming>feature/component-name</branch_naming>
    <commit_format>conventional</commit_format>
    <code_review>
      <required>true</required>
      <min_reviewers>1</min_reviewers>
    </code_review>
  </development_workflow>

  <testing_strategy>
    <test_types>
      <unit_tests>true</unit_tests>
      <integration_tests>true</integration_tests>
      <end_to_end_tests>true</end_to_end_tests>
    </test_types>
    <test_framework>
      <name>jest</name>
      <config_file>jest.config.js</config_file>
    </test_framework>
  </testing_strategy>

  <deployment>
    <strategy>ci-cd</strategy>
    <environments>
      <environment>
        <name>development</name>
        <url>http://localhost:3000</url>
      </environment>
      <environment>
        <name>staging</name>
        <url>https://staging.myapp.com</url>
      </environment>
      <environment>
        <name>production</name>
        <url>https://myapp.com</url>
      </environment>
    </environments>
  </deployment>

  <team>
    <size>small</size>
    <methodology>agile</methodology>
    <communication>
      <issue_tracking>github</issue_tracking>
      <documentation_style>markdown</documentation_style>
    </communication>
  </team>

  <integrations>
    <services>
      <service>
        <name>github</name>
        <enabled>true</enabled>
        <config>
          <issue_tracking>true</issue_tracking>
          <pr_automation>true</pr_automation>
        </config>
      </service>
      <service>
        <name>vercel</name>
        <enabled>true</enabled>
        <config>
          <auto_deploy>true</auto_deploy>
          <preview_deployments>true</preview_deployments>
        </config>
      </service>
    </services>
  </integrations>

  <!-- React-specific configurations -->
  <react_specific>
    <component_style>functional</component_style>
    <state_management>context</state_management>
    <routing>react-router</routing>
    <styling>tailwind</styling>
    <build_tool>vite</build_tool>
    <testing_library>react-testing-library</testing_library>
  </react_specific>
</project_config>