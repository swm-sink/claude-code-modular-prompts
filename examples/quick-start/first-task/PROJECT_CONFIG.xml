<?xml version="1.0" encoding="UTF-8"?>
<!-- First Task - TDD-Optimized Configuration for Learning Development -->
<project_configuration version="1.0.0">
  <project_info>
    <name>First Task Development</name>
    <domain>general-development</domain>
    <description>TDD-focused configuration for learning development workflows</description>
    <primary_language>javascript</primary_language>
    <framework_stack>general</framework_stack>
  </project_info>

  <project_structure>
    <root_directory>.</root_directory>
    <source_directory>src</source_directory>
    <test_directory>src/__tests__</test_directory>
    <docs_directory>docs</docs_directory>
    <scripts_directory>scripts</scripts_directory>
    <config_directory>config</config_directory>
    <build_directory>build</build_directory>
  </project_structure>

  <quality_standards>
    <test_coverage>
      <threshold>85</threshold>
      <enforcement>BLOCKING</enforcement>
      <tool>jest</tool>
    </test_coverage>
    <performance>
      <response_time_p95>300ms</response_time_p95>
      <response_time_p99>800ms</response_time_p99>
      <memory_limit>256MB</memory_limit>
    </performance>
    <code_quality>
      <linter>eslint</linter>
      <formatter>prettier</formatter>
      <type_checker>none</type_checker>
    </code_quality>
  </quality_standards>

  <development_workflow>
    <commands>
      <install>npm install</install>
      <test>npm test</test>
      <lint>npm run lint</lint>
      <build>npm run build</build>
      <run>npm start</run>
      <format>npm run format</format>
    </commands>
    <git_workflow>
      <branch_pattern>feature/*</branch_pattern>
      <commit_style>conventional</commit_style>
      <pr_template>enabled</pr_template>
    </git_workflow>
  </development_workflow>

  <domain_specific_rules>
    <rule>Follow strict TDD: RED→GREEN→REFACTOR cycle mandatory</rule>
    <rule>Write failing test before any implementation</rule>
    <rule>Implement minimal code to pass tests</rule>
    <rule>Refactor for quality while keeping tests green</rule>
    <rule>Focus on single responsibility and clear naming</rule>
  </domain_specific_rules>

  <framework_behavior>
    <file_creation_policy>moderate</file_creation_policy>
    <documentation_generation>auto</documentation_generation>
    <test_first_enforcement>strict</test_first_enforcement>
    <ai_temperature>
      <factual>0.2</factual>
      <analysis>0.3</analysis>
      <creative>0.4</creative>
    </ai_temperature>
  </framework_behavior>
</project_configuration>