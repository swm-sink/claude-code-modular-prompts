<?xml version="1.0" encoding="UTF-8"?>
<!-- Basic Feature - Production-Ready Configuration for Complete Feature Development -->
<project_configuration version="1.0.0">
  <project_info>
    <name>Basic Feature Development</name>
    <domain>feature-development</domain>
    <description>Production-ready configuration for complete feature development workflow</description>
    <primary_language>javascript</primary_language>
    <framework_stack>general</framework_stack>
  </project_info>

  <project_structure>
    <root_directory>.</root_directory>
    <source_directory>src</source_directory>
    <test_directory>tests</test_directory>
    <docs_directory>docs</docs_directory>
    <scripts_directory>scripts</scripts_directory>
    <config_directory>config</config_directory>
    <build_directory>build</build_directory>
  </project_structure>

  <quality_standards>
    <test_coverage>
      <threshold>90</threshold>
      <enforcement>BLOCKING</enforcement>
      <tool>jest</tool>
    </test_coverage>
    <performance>
      <response_time_p95>200ms</response_time_p95>
      <response_time_p99>500ms</response_time_p99>
      <memory_limit>256MB</memory_limit>
    </performance>
    <code_quality>
      <linter>eslint</linter>
      <formatter>prettier</formatter>
      <type_checker>none</type_checker>
    </code_quality>
  </quality_standards>

  <development_workflow>
    <commands>
      <install>npm install</install>
      <test>npm test</test>
      <lint>npm run lint</lint>
      <build>npm run build</build>
      <run>npm start</run>
      <format>npm run format</format>
    </commands>
    <git_workflow>
      <branch_pattern>feature/*</branch_pattern>
      <commit_style>conventional</commit_style>
      <pr_template>enabled</pr_template>
    </git_workflow>
  </development_workflow>

  <domain_specific_rules>
    <rule>Research requirements thoroughly before implementation</rule>
    <rule>Plan component architecture and interactions</rule>
    <rule>Implement with strict TDD: RED→GREEN→REFACTOR</rule>
    <rule>Ensure components have clear, single responsibilities</rule>
    <rule>Test both unit functionality and integration behavior</rule>
    <rule>Include comprehensive error handling and validation</rule>
    <rule>Document API interfaces and usage examples</rule>
    <rule>Validate production readiness before completion</rule>
  </domain_specific_rules>

  <framework_behavior>
    <file_creation_policy>moderate</file_creation_policy>
    <documentation_generation>auto</documentation_generation>
    <test_first_enforcement>strict</test_first_enforcement>
    <ai_temperature>
      <factual>0.2</factual>
      <analysis>0.3</analysis>
      <creative>0.4</creative>
    </ai_temperature>
  </framework_behavior>
</project_configuration>