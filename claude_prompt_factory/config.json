{
  "version": "5.0.0",
  "description": "Modular Claude Code Prompt System Configuration",
  
  "global": {
    "parallel_execution": true,
    "max_tokens": 100000,
    "verbosity": "normal",
    "token_optimization": true,
    "error_recovery": true
  },
  
  "commands": {
    "task": {
      "test_framework": "jest",
      "test_directory": "__tests__",
      "coverage_threshold": 90,
      "style_guide": "airbnb",
      "tdd_strict": true
    },
    
    "query": {
      "max_results": 50,
      "context_lines": 10,
      "include_tests": true,
      "parallel_searches": 5,
      "semantic_search": true
    },
    
    "auto": {
      "explain_routing": true,
      "default_complexity_threshold": 5,
      "prefer_tdd": true,
      "learning_mode": false,
      "progressive_disclosure": true
    },
    
    "feature": {
      "parallel_components": true,
      "auto_install_deps": true,
      "generate_tests": true,
      "test_coverage_threshold": 80,
      "documentation": true
    }
  },
  
  "project": {
    "type": "auto-detect",
    "test_command": "npm test",
    "lint_command": "npm run lint",
    "format_command": "npm run format",
    "build_command": "npm run build"
  },
  
  "performance": {
    "cache_duration": 300000,
    "batch_size": 5,
    "timeout_default": 120000,
    "parallel_limit": 10
  },
  
  "modules": {
    "auto_load": [
      "core/parallel-execution",
      "core/context-management",
      "core/tool-orchestration"
    ]
  }
}