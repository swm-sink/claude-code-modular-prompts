{
  "tools": {
    "enabled": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "LS",
      "Bash",
      "WebSearch",
      "WebFetch",
      "Task",
      "TodoWrite"
    ],
    "dangerouslySkipConfirmation": false
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run typecheck:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ]
  },
  "context": {
    "maxTokens": 200000,
    "preserveContext": true,
    "autoCompact": true
  },
  "commands": {
    "directory": ".claude/commands",
    "autoDiscover": true,
    "categories": ["core", "development", "testing", "utility", "initialization"]
  },
  "ignorePatterns": [
    "node_modules/**",
    ".git/**",
    "build/**",
    "dist/**",
    "coverage/**",
    "*.log",
    "*.tmp"
  ],
  "hooks": {
    "preCommit": ["npm run lint", "npm run test"],
    "postToolUse": []
  }
}