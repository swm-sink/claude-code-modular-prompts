{
  "monitoring": {
    "collection_interval_seconds": 300,
    "metrics_retention_days": 90,
    "alert_thresholds": {
      "response_time_p95": 3.0,
      "success_rate": 0.85,
      "error_rate": 0.05,
      "user_satisfaction": 4.0,
      "token_efficiency": 7.0
    },
    "anomaly_detection": {
      "enabled": true,
      "sensitivity": 0.8,
      "lookback_hours": 24
    }
  },
  "analysis": {
    "trend_analysis_days": 30,
    "significance_threshold": 0.05,
    "minimum_data_points": 10,
    "correlation_analysis": true,
    "predictive_modeling": {
      "enabled": true,
      "forecast_days": 7
    }
  },
  "planning": {
    "max_improvements_per_cycle": 5,
    "impact_weight": 0.4,
    "effort_weight": 0.3,
    "risk_weight": 0.3,
    "strategic_alignment_weight": 0.2
  },
  "execution": {
    "max_concurrent_improvements": 3,
    "rollback_timeout_minutes": 30,
    "quality_gate_timeout_minutes": 60,
    "parallel_execution": true,
    "dependency_resolution": true,
    "auto_rollback": {
      "enabled": true,
      "failure_threshold": 0.2,
      "monitoring_duration_minutes": 60
    }
  },
  "validation": {
    "stability_monitoring_hours": 24,
    "user_feedback_collection_hours": 48,
    "performance_validation_samples": 100,
    "regression_testing": {
      "enabled": true,
      "test_suites": ["unit", "integration", "performance"],
      "coverage_threshold": 0.9
    },
    "a_b_testing": {
      "enabled": true,
      "traffic_split": 0.1,
      "duration_hours": 72
    }
  },
  "scheduling": {
    "daily_monitoring": {
      "enabled": true,
      "time": "02:00",
      "timezone": "UTC"
    },
    "weekly_optimization": {
      "enabled": true,
      "day": "Sunday",
      "time": "04:00",
      "timezone": "UTC"
    },
    "monthly_analysis": {
      "enabled": true,
      "day": 1,
      "time": "06:00",
      "timezone": "UTC"
    }
  },
  "notifications": {
    "github_issues": {
      "enabled": true,
      "labels": ["improvement", "automated"],
      "assignees": [],
      "milestone_tracking": true
    },
    "alerts": {
      "critical_threshold_violations": true,
      "improvement_failures": true,
      "rollback_events": true,
      "validation_failures": true
    }
  },
  "reporting": {
    "dashboard_update_interval_minutes": 15,
    "trend_reports": {
      "enabled": true,
      "frequency": "weekly"
    },
    "executive_summaries": {
      "enabled": true,
      "frequency": "monthly"
    },
    "detailed_analytics": {
      "enabled": true,
      "retention_months": 12
    }
  }
}