<?xml version="1.0" encoding="UTF-8"?>
<project_config>

  <metadata>
    <name>claude-code-prompt-factory</name>
    <version>1.0.0</version>
    <description>A modular, configurable, and comprehensive library of prompt-based commands that feel native to the Claude Code environment.</description>
  </metadata>

  <tech_stack>
    <languages>
      <language name="markdown" primary="true" />
      <language name="xml" />
      <language name="python" />
    </languages>
    <tools>
      <tool type="linter" name="markdownlint" command="markdownlint" config_file=".markdownlint.json" />
      <tool type="linter" name="xmllint" command="xmllint --noout" />
    </tools>
  </tech_stack>

  <paths>
    <source>claude_prompt_factory/</source>
    <docs>docs/</docs>
    <components>claude_prompt_factory/components/</components>
    <commands>claude_prompt_factory/commands/</commands>
  </paths>

  <scripts>
    <script id="lint">markdownlint . && xmllint --noout $(find . -name "*.xml")</script>
    <script id="test">echo "No automated tests configured."</script>
  </scripts>

  <command_settings>
    <command name="/protocol">
      <setting key="epiccc.check.run_static_analysis" value="true" />
      <setting key="epiccc.check.run_unit_tests" value="false" />
      <setting key="epiccc.check.request_peer_review" value="true" />
    </command>
    <command name="/docs generate">
        <setting key="style" value="google" />
        <setting key="output_dir" value="docs/generated/" />
    </command>
  </command_settings>

</project_config> 