      "setup_time_minutes": 5,
      "components": {
        "files": [
          {
            "path": "CLAUDE.md",
            "lines": 20,
            "purpose": "Minimal configuration and command definitions"
          },
          {
            "path": ".claude/upgrade.md",
            "lines": 10,
            "purpose": "Upgrade instructions",
            "optional": true
          }
        ],
        "commands": [
          {
            "name": "/task",
            "implementation": "native",
            "tokens": 200,
            "description": "TDD development cycle"
          },
          {
            "name": "/query", 
            "implementation": "native",
            "tokens": 150,
            "description": "Research and analysis"
          },
          {
            "name": "/feature",
            "implementation": "native", 
            "tokens": 300,
            "description": "Multi-file feature development"
          },
          {
            "name": "/fix",
            "implementation": "native",
            "tokens": 200,
            "description": "Debug and fix issues"
          },
          {
            "name": "/docs",
            "implementation": "native",
            "tokens": 250,
            "description": "Generate documentation"
          },
          {
            "name": "/review",
            "implementation": "native",
            "tokens": 200,
            "description": "Code review"
          },
          {
            "name": "/refactor",
            "implementation": "native",
            "tokens": 250,
            "description": "Improve code quality"
          },
          {
            "name": "/test",
            "implementation": "native",
            "tokens": 200,
            "description": "Add or improve tests"
          }
        ],
        "dependencies": [],
        "state_management": "git"
      },
      "metrics": {
        "total_files": 2,
        "total_lines": 30,
        "max_tokens": 5000,
        "setup_steps": 2,
        "learning_curve_minutes": 10
      }
    },
    "standard": {
      "name": "Framework Standard",
      "target_users": "Week 2-3 developers",
      "token_budget": 20000,
      "setup_time_minutes": 15,
      "components": {
        "files": [
          {
            "path": "CLAUDE.md",
            "lines": 100,
            "purpose": "Enhanced configuration with patterns"
          },
          {
            "path": ".claude/config.json",
            "lines": 50,
            "purpose": "Project and team configuration"
          },
          {
            "path": ".claude/patterns/tdd-enhanced.md",
            "lines": 100,
            "purpose": "Advanced TDD workflows"
          },
          {
            "path": ".claude/patterns/review-checklist.md",
            "lines": 80,
            "purpose": "Comprehensive review criteria"
          },
          {
            "path": ".claude/patterns/performance-optimization.md",
            "lines": 120,
            "purpose": "Performance patterns"
          },
          {
            "path": ".claude/patterns/security-patterns.md",
            "lines": 100,
            "purpose": "Security best practices"
          },
          {
            "path": ".claude/patterns/deployment-patterns.md",
            "lines": 90,
            "purpose": "CI/CD integration"
          },
          {
            "path": ".claude-mcp/tools/project-tools.js",
            "lines": 200,
            "purpose": "MCP tool definitions"
          }
        ],
        "commands": [
          "inherits:lite",
          {
            "name": "/pattern",
            "implementation": "mcp",
            "tokens": 500,
            "description": "Apply specialized patterns"
          },
          {
            "name": "/team",
            "implementation": "mcp",
            "tokens": 400,
            "description": "Team collaboration features"
          },
          {
            "name": "/optimize",
            "implementation": "mcp",
            "tokens": 600,
            "description": "Performance optimization"
          }
        ],
        "dependencies": [
          {
            "name": "mcp",
            "version": "^1.0.0",
            "purpose": "Model Context Protocol for tools"
          }
        ],
        "state_management": "git+mcp-memory"
      },
      "metrics": {
        "total_files": 9,
        "total_lines": 840,
        "max_tokens": 20000,
        "setup_steps": 5,
        "learning_curve_minutes": 30
      },
      "upgrade_from_lite": {
        "automatic": true,
        "preserves": ["all_work", "git_history", "commands"],
        "adds": ["mcp_tools", "patterns", "team_features"],
        "rollback_available": true
      }
    },
    "pro": {
      "name": "Framework Pro",
      "target_users": "Month 2+ power users",
      "token_budget": 50000,
      "setup_time_minutes": 30,
      "components": {
        "files": [
          {
            "path": "CLAUDE.md",
            "lines": 300,
            "purpose": "Full framework configuration"
          },
          {
            "path": ".claude/",
            "type": "directory",
            "subdirs": 8,
            "total_files": 50,
            "purpose": "Complete framework ecosystem"
          },
          {
            "path": ".claude-mcp/",
            "type": "directory", 
            "subdirs": 3,
            "total_files": 15,
            "purpose": "Advanced MCP servers"
          }
        ],
        "commands": [
          "inherits:standard",
          {
            "name": "/meta",
            "implementation": "meta-framework",
            "tokens": 2000,
            "description": "Self-optimizing framework"
          },
          {
            "name": "/workflow",
            "implementation": "orchestration",
            "tokens": 1500,
            "description": "Complex workflow automation"
          },
          {
            "name": "/analyze",
            "implementation": "analytics",
            "tokens": 1000,
            "description": "Usage analytics and insights"
          },
          {
            "name": "/enterprise",
            "implementation": "integration",
            "tokens": 2000,
            "description": "Enterprise tool integration"
          }
        ],
        "dependencies": [
          "inherits:standard",
          {
            "name": "mcp-memory",
            "version": "^1.0.0",
            "purpose": "Persistent memory server"
          },
          {
            "name": "mcp-context",
            "version": "^1.0.0",
            "purpose": "Advanced context management"
          }
        ],
        "state_management": "git+mcp-memory+analytics"
      },
      "metrics": {
        "total_files": 67,
        "total_lines": 5000,
        "max_tokens": 50000,
        "setup_steps": 10,
        "learning_curve_minutes": 180
      },
      "upgrade_from_standard": {
        "automatic": true,
        "preserves": ["all_features", "configuration", "patterns"],
        "adds": ["meta_framework", "analytics", "enterprise_integration"],
        "rollback_available": true
      }
    }
  },
  "migration_paths": {
    "lite_to_standard": {
      "steps": [
        "Install MCP runtime",
        "Copy pattern files",
        "Update CLAUDE.md",
        "Initialize config.json",
        "Test enhanced commands"
      ],
      "duration_minutes": 10,
      "automated": true,
      "rollback_steps": [
        "Remove .claude directory",
        "Restore minimal CLAUDE.md",
        "Uninstall MCP"
      ]
    },
    "standard_to_pro": {
      "steps": [
        "Expand pattern library",
        "Install analytics pipeline",
        "Configure meta-framework",
        "Setup enterprise integrations",
        "Initialize monitoring"
      ],
      "duration_minutes": 20,
      "automated": true,
      "rollback_steps": [
        "Disable meta-framework",
        "Remove analytics",
        "Restore standard patterns",
        "Cleanup enterprise configs"
      ]
    },
    "current_to_lite": {
      "steps": [
        "Analyze command usage",
        "Extract core 8 commands",
        "Create minimal CLAUDE.md",
        "Archive existing framework",
        "Test lite implementation"
      ],
      "duration_minutes": 60,
      "automated": false,
      "manual_review_required": true
    }
  },
  "performance_benchmarks": {
    "command_execution": {
      "lite": {
        "p50": 1.5,
        "p95": 2.0,
        "p99": 3.0
      },
